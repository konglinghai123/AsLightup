<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
 
    >

    <com.zhy.View.TitleBar
        android:id="@+id/TitleBar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true" >
    </com.zhy.View.TitleBar>
    
   
     <LinearLayout
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dip"
        android:layout_marginLeft="21.0dip"
        android:layout_marginRight="21.0dip"
      android:background="@drawable/shape_bg"
        android:orientation="vertical" >
		

		     <com.zhy.View.EditTextWithDel
		     android:layout_toRightOf="@+id/picuser"
            android:id="@+id/accounts"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:background="#00ffffff"
       		 android:hint="手机号码"
             android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="10.0dip"
              android:textColor="#ff1d1d1d"
            android:textColorHint="#ff666666"
            android:layout_marginRight="2dp"
            android:textSize="16.0sp"
     
             />

		  
       

        <View
            android:layout_width="fill_parent"
            android:layout_height="2.0px"
           android:layout_marginLeft="12dp"
	         android:layout_marginRight="12dp"
            android:background="#ffc0c3c4" />
	
	      <com.zhy.View.EditTextWithDel
	       	android:layout_toRightOf="@+id/picpass"
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:background="#00ffffff"
            android:gravity="center_vertical"
          	android:hint="密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingLeft="10.0dip"
              android:textColor="#ff1d1d1d"
            android:textColorHint="#ff666666"
            android:layout_marginRight="2dp"
            android:textSize="16.0sp"
         
             />

	  
	     <View
            android:layout_width="fill_parent"
            android:layout_height="2.0px"
           android:layout_marginLeft="12dp"
	         android:layout_marginRight="12dp"
            android:background="#ffc0c3c4" />

	     <Button
	         android:id="@+id/login"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="12dp"
	         android:layout_marginRight="12dp"
	         android:layout_marginTop="24dp"
	         android:background="@drawable/btn_login_selector"
	         android:gravity="center"
	         android:text="登  录"
	         android:textColor="#e1fce8"
	         android:textSize="18.0sp" />

	     <CheckBox
	         android:id="@+id/ch_is_savepassword"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="5dp"
	         android:text="记住密码"
	         android:textColor="#ff1d1d1d"
	         android:textSize="18.0sp" 
	         android:checked="true"
	         />

      	<RelativeLayout 
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    
      	    >
      	    <TextView 
      	    
		        android:layout_marginRight="12dp"
      	        android:id="@+id/not_resigter"
      	        android:layout_width="wrap_content"
      	        android:layout_height="wrap_content"
      	        android:text="还没注册？"
      	       	android:textSize="16.0sp"
      	        android:textColor="#ff1d1d1d" 
      	        android:layout_alignParentRight="true"
      	        />
      	   
      	</RelativeLayout>
    </LinearLayout>

  
        
    <!-- <com.ant.liao.GifView
        android:id="@+id/gifview01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        /> -->

	<ImageView
	    android:id="@+id/mylogo"
	    android:layout_width="120dp"
	    android:layout_height="120dp"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="80dp"
	   
	    android:src="@drawable/mylogo" />

</RelativeLayout>